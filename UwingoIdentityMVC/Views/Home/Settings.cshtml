@model UserDto
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Account Settings"];
}

<div class="container mt-5">
    <h2>@Localizer["Account Settings"]</h2>

    <form asp-action="UpdateAccountSettings" method="post">
        <div class="form-group mb-3">
            <label for="UserName">@Localizer["Username"]</label>
            <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" readonly />
        </div>

        <div class="form-group mb-3">
            <label for="CurrentPassword">@Localizer["Current Password"]</label>
            <input type="password" class="form-control" id="CurrentPassword" name="CurrentPassword" />
        </div>

        <div class="form-group mb-3">
            <label for="NewPassword">@Localizer["New Password"]</label>
            <input type="password" class="form-control" id="NewPassword" name="NewPassword" />
        </div>

        <div class="form-group mb-3">
            <label for="ConfirmPassword">@Localizer["Confirm Password"]</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" />
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["Update Account Settings"]</button>
    </form>

    <hr />

    <h3>@Localizer["Notification Settings"]</h3>

    <form asp-action="UpdateNotificationSettings" method="post">
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="EmailNotifications" name="emailNotifications" checked />
            <label class="form-check-label" for="EmailNotifications">@Localizer["Email Notifications"]</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="SmsNotifications" name="smsNotifications" />
            <label class="form-check-label" for="SmsNotifications">@Localizer["SMS Notifications"]</label>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="PushNotifications" name="pushNotifications" checked />
            <label class="form-check-label" for="PushNotifications">@Localizer["Push Notifications"]</label>
        </div>

        <button type="submit" class="btn btn-primary">@Localizer["Update Notification Settings"]</button>
    </form>
</div>
