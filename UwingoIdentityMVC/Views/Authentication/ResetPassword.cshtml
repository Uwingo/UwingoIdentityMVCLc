@model ResetPasswordVM
@{
    Layout = string.Empty;

    var email = Model.Email;
    var token = Model.Token;

    // Token veya email yoksa hata döndür
    if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(token))
    {
        <script>
            alert("@Localizer["InvalidUrlOrMissingParameters"]");
            window.location.href = "/Authentication/Login";
        </script>
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@Localizer["Uwingo - Reset Password"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="@Localizer["Reset your password"]" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/uwingoIco.ico">

    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="account-body accountbg">
    <!-- Reset Password Page -->
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="/" class="logo logo-admin">
                                        <img src="~/images/uwingoLogo.jpg" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white">@Localizer["Create New Password"]</h4>
                                    <p class="text-muted">@Localizer["Create your new password."]</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <form id="resetPasswordForm" class="form-horizontal auth-form" method="post" action="javascript:void(0);">
                                    <input type="hidden" id="email" value="@Model.Email">
                                    <input type="hidden" id="token" value="@Model.Token">
                                    <div class="form-group mb-2">
                                        <label class="form-label" for="newPassword">@Localizer["New Password"]</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="newPassword" placeholder="@Localizer["Enter your new password"]" required>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0 row">
                                        <div class="col-12 mt-2">
                                            <button class="btn btn-primary w-100 waves-effect waves-light" type="button" id="confirmResetButton">@Localizer["Reset Password"]</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-body bg-light-alt text-center">
                                <span class="text-muted">© 2024 Uwingo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Reset Password Page -->
    <!-- jQuery  -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!-- AJAX request for ResetPassword -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#confirmResetButton').click(function () {
                var newPassword = $('#newPassword').val();
                var email = $('#email').val();
                var token = $('#token').val();

                if (!newPassword) {
                    alert("@Localizer["Please enter a new password."]");
                    return;
                }

                if (!email || !token) {
                    alert("@Localizer["Email or token is missing."]");
                    return;
                }

                $.ajax({
                    url: '/Authentication/ResetPassword',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ email: email, token: token, newPassword: newPassword }),
                    success: function (response) {
                        alert(response);
                        window.location.href = "/Authentication/Login"; // Şifre sıfırlandıktan sonra login sayfasına yönlendirme
                    },
                    error: function (xhr) {
                        alert("@Localizer["Error: "]" + xhr.responseText);
                    }
                });
            });
        });
    </script>

</body>

</html>
