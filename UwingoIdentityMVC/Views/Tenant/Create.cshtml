@model TenantDto
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["CreateTenant"]; // "Kiracı Oluştur"
}

<h2>@Localizer["CreateTenant"]</h2>

<form id="createTenantForm" asp-action="Create">
    <div class="form-group">
        <label for="Name">@Localizer["Name"]</label> <!-- "Ad" -->
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Email">@Localizer["Email"]</label> <!-- "E-posta" -->
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Address">@Localizer["Address"]</label> <!-- "Adres" -->
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button> <!-- "Oluştur" -->
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a> <!-- "İptal" -->
</form>
