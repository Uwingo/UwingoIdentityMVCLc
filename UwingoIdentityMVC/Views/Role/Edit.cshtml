@model RoleDto
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Edit Role"];
}

<h2>@Localizer["Edit Role"]</h2>

<div class="form-group">
    <label for="Name">@Localizer["Name"]</label>
    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
</div>
<div class="form-group">
    <label for="Description">@Localizer["Description"]</label>
    <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required />
</div>
<button type="button" id="button" name="button" onclick="myFunc()" class="btn btn-primary">@Localizer["Update"]</button>
<a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>

@section Scripts {
    <script>
        function myFunc() {
            Swal.fire({
                title: '@Localizer["Are you sure?"]',
                text: "@Localizer["You are about to update!"]",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: '@Localizer["Yes, Update!"]',
                cancelButtonText: '@Localizer["No, Cancel Update"]',
                reverseButtons: true
            }).then(function (result) {
                if (result.isConfirmed) {
                    // Prepare form data
                    var role = {
                        Id: '@Model.Id',
                        Name: document.getElementById("Name").value,
                        Description: document.getElementById("Description").value,
                    };

                    // Send data with AJAX request
                    $.ajax({
                        url: '@Url.Action("Edit", "Role")',
                        type: 'POST',
                        data: JSON.stringify(role),
                        contentType: 'application/json',
                        success: function (role) {
                            Swal.fire(
                                '@Localizer["Updated!"]',
                                '@Localizer["Update completed successfully."]',
                                'success'
                            ).then(() => {
                                window.location.href = '@Url.Action("Index", "Role")';
                            });
                        },
                        error: function () {
                            Swal.fire(
                                '@Localizer["Error!"]',
                                '@Localizer["An error occurred during update."]',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}
