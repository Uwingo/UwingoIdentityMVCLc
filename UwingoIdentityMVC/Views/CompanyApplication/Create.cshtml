@model Tuple<CompanyApplicationDto, List<CompanyDto>, List<ApplicationDto>>

@{
    ViewBag.Title = Localizer["Assign Application to Company"];
}

<h2>@Localizer["Assign Application to Company"]</h2>

<div class="form-group">
    <label for="CompanyId">@Localizer["Select Company"]</label>

    <select class="form-control select2" name="CompanyId" id="CompanyId" data-placeholder="-- @Localizer["Select Company"] --">
        <option value=""></option>
        @foreach (var item in Model.Item2)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label for="ApplicationId">@Localizer["Select Application"]</label>
    <select class="form-control select2" name="ApplicationId" id="ApplicationId" data-placeholder="-- @Localizer["Select Application"] --">
        <option value=""></option>
        @foreach (var item in Model.Item3)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label for="DbConnection">@Localizer["Database Connection"]</label>
    <input type="text" class="form-control" id="DbConnection" name="DbConnection" required />
</div>
<button type="button" name="button" id="button" class="btn btn-primary" onclick="submitCreateForm()">@Localizer["Assign"]</button>
<a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>

@section Scripts {
    <script>
        function submitCreateForm() {
            Swal.fire({
                title: '@Localizer["Are you sure?"]',
                text: '@Localizer["You are about to assign this application to the company!"]',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: '@Localizer["Yes, Assign it!"]',
                cancelButtonText: '@Localizer["No, Cancel!"]',
                reverseButtons: true
            }).then(function (result) {
                if (result.isConfirmed) {
                    var companyApplication = {
                        CompanyId: $('#CompanyId').val(),
                        ApplicationId: $('#ApplicationId').val(),
                        DbConnection: $('#DbConnection').val()
                    };

                    console.log(companyApplication.CompanyId);
                    console.log(companyApplication.ApplicationId);
                    console.log(companyApplication.DbConnection);

                    $.ajax({
                        url: '@Url.Action("Create", "CompanyApplication")',
                        type: 'POST',
                        data: JSON.stringify(companyApplication),
                        contentType: 'application/json',
                        success: function (response) {
                            Swal.fire(
                                '@Localizer["Assigned!"]',
                                '@Localizer["The application has been assigned successfully."]',
                                'success'
                            ).then(() => {
                                window.location.href = '@Url.Action("Index", "CompanyApplication")';
                            });
                        },
                        error: function () {
                            Swal.fire(
                                '@Localizer["Error!"]',
                                '@Localizer["There was an error assigning the application."]',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}
