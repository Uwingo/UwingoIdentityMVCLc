@model List<TenantDto>

@{
    ViewBag.Title = Localizer["CreateCompany"];
}

<h2>@Localizer["CreateCompany"]</h2>

<form id="createCompanyForm" asp-action="Create">
    <div class="form-group">
        <label for="Name">@Localizer["Name"]</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Address">@Localizer["Address"]</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="TenantId">@Localizer["Tenant"]</label>
        <select id="TenantId" name="TenantId" class="form-select select2" required data-placeholder="@Localizer["--PleaseSelectTenant--"]">
            <option value=""></option>
            @foreach (var tenant in Model)
            {
                <option value="@tenant.Id">@tenant.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>
